<!--
including header content which is common for all pages
-->
<%- include ../layouts/header.ejs %>

<% if (messages.error) { %>
	<p style="color:red"><%- messages.error %></p>
<% } %>

<% if (messages.success) { %>
	<p style="color:green"><%- messages.success %></p>
<% } %>

<form action="/admin/editQuestions/<%= id %>" method="post" name="form1">
	<table width="25%" border="0">
		<tr>
			<td>QuestionType</td>
			<td><input type="text" name="questionType" id="questionType" value="<%= questionType %>" /></td>
		</tr>
		<tr>
			<td>QuestionText</td>
			<td><input type="text" name="questionText" value="<%= questionText %>" /></td>
		</tr>
		<tr>
			<td>Answer 1</td>
			<td><input type="text" name="answer1" value="<%= answer1 %>" /></td>
		</tr>
    <tr>
			<td>Answer 1 Text</td>
			<td><input type="text" name="answer1Text" value="<%= answer1Text %>" /></td>
		</tr>
    <tr>
			<td>Answer 2</td>
			<td><input type="text" name="answer2" value="<%= answer2 %>" /></td>
		</tr>
    <tr>
			<td>Answer 2 Text</td>
			<td><input type="text" name="answer2Text" value="<%= answer2Text %>" /></td>
		</tr>
    <tr>
			<td>Answer 3</td>
			<td><input type="text" name="answer3" value="<%= answer3 %>" /></td>
		</tr>
    <tr>
			<td>Answer 3 Text</td>
			<td><input type="text" name="answer3Text" value="<%= answer3Text %>" /></td>
		</tr>
    <tr>
			<td>Answer 4</td>
			<td><input type="text" name="answer4" value="<%= answer4 %>" /></td>
		</tr>
    <tr>
			<td>Answer 4 Text</td>
			<td><input type="text" name="answer4Text" value="<%= answer4Text %>" /></td>
		</tr>
    <tr>
			<td>Correct Answer</td>
			<td><input type="text" name="correctAnswer" value="<%= correctAnswer %>" /></td>
		</tr>
		<tr>
			<td></td>
			<td><input type="submit" name="Submit" value="Edit" /></td>
		</tr>
	</table>
	<input type="hidden" name="_method" value="PUT" />
</form>

<!--
including footer content which is common for all pages
-->
<%- include ../layouts/footer.ejs %>
